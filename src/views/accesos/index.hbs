<div class="row" style="margin-top: 1rem;">
    <div class="col-12">
        <div class="card position-relative">
            <div class="card-body">
                <h4 class="header-title mt-0 mb-1">ACCESOS / GESTIÃ“N</h4>
            </div>
            <div class="d-flex w-100" style="padding: 0 1.25rem 1.25rem 1.25rem; column-gap:16px">
                <div style="width: 350px; flex-shrink: 0;">
                    <div>
                        <label class="form-label" for="perfiles">Perfiles :</label>
                        <div class="position-relative">
                            <select class="chosen-select form-select form-input form-control requerido" id="perfiles"
                                onchange="manejarSeleccionPerfil(event)">
                                <option value="" disabled selected>Seleccionar</option>
                                {{#each perfiles}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                            <div class="loader-overlay">
                                <div class="loader"></div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary" id="guardar" disabled>Guardar</button>
                    </div>
                </div>
                <div class="flex-grow-1 border border-dark position-relative"
                    style="padding: 1.25rem; margin-top: 30px; max-height: 480px; overflow-y: auto;">
                    <div>
                        <span id="seccionInicial">Seleccione un perfil para visualizar sus permisos de acceso.</span>
                        <div id="seccionAccesos">
                        </div>
                        <div class="loader-overlay">
                            <div class="loader"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="position-absolute top-0 start-0 w-100 h-100"
                style="background: rgba(255, 255, 255, 0.3); z-index: 1040; display: none;" id="loaderContainer">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>