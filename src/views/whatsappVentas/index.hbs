<!-- sample modal content -->
<div id="modalAddWhatsapp" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Agregar Número</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formWhatsapp">
                <input type="hidden" name="idnumber" id="idnumber" value="0">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label" for="numero_whatsapp">Número</label>
                                <input type="number" class="form-control" id="numero_whatsapp" name="numero_whatsapp" placeholder="#" required="">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label" for="nombre_whatsapp">Nombre</label>
                                <input type="text" class="form-control" id="nombre_whatsapp" name="nombre_whatsapp" placeholder="Escriba el nombre de la publicidad" required="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label" for="descripcion_whatsapp">Descripción</label>
                                <input type="text" class="form-control" id="descripcion_whatsapp" name="descripcion_whatsapp" placeholder="(opcional)">
                            </div>
                        </div>
                    </div>
                </div>
            
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->