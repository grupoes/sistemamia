<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Usuarios</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Grupo Es Consultores</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Tabla</a></li>
                    <li class="breadcrumb-item active">Usuarios</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title mt-0 mb-1">Lista de Usuarios</h4>

                <button type="button" class="btn btn-primary mt-2 mb-2" id="addUser">Crear Usuario</button>
                <table id="basic-datatable" class="table display nowrap w-100">
                    <thead>
                        <tr>
                            <th class="cabecera">#</th>
                            <th class="cabecera">Nombre</th>
                            <th class="cabecera">Cumpleaños</th>
                            <th class="cabecera">Área</th>
                             <th class="cabecera">Carrera</th>
                            <th class="cabecera">Correo</th>
                            <th class="cabecera">Teléfono</th>
                            <th class="cabecera">Whatsapp</th>
                            <th class="cabecera">Modalidad</th>
                            <th class="cabecera">Estado</th>
                            <th class="cabecera">Acción</th>
                        </tr>
                    </thead>
                    <tbody id="renderTableUsers">
                    </tbody>
                </table>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>
<!-- end row-->

<div class="modal fade" id="modalAddUser" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel"
    aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-content position-relative">
            <div class="modal-header">
                <h5 class="modal-title" id="myExtraLargeModalLabel">Agregar Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" id="id_usuario" value="0">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="tipoDocumento">Tipo de Documento *</label>
                            <select class="chosen-select form-select form-input form-control requerido"
                                id="tipoDocumento">
                                <option value="" disabled selected>Seleccionar</option>
                                {{#each tiposDocumento}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="numeroDocumento">Número de Documento *</label>
                            <div class="input-group">
                                <input type="text" class="form-input form-control requerido"
                                    placeholder="Ingrese el número" name="numeroDocumento" id="numeroDocumento"
                                    autocomplete="off" data-length="0" disabled>
                                <div class="position-relative">
                                    <button class="btn btn-success" type="button" id="searchDni" disabled><i
                                            class="uil-search"></i></button>
                                    <div class="loader-overlay">
                                        <div class="loader-spinner"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="nameUsuario">Nombre *</label>
                            <div class="position-relative">
                                <input type="text" class="form-input form-control requerido" name="nameUsuario"
                                    id="nameUsuario" placeholder="Nombre del usuario"
                                    oninput="validationOfRequeridFields()">
                                <div class="loader-overlay">
                                    <div class="loader"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="lastName">Apellidos *</label>
                            <div class="position-relative">
                                <input type="text" class="form-input form-control requerido" name="lastName"
                                    id="lastName" placeholder="Apellidos del usuario"
                                    oninput="validationOfRequeridFields()">
                                <div class="loader-overlay">
                                    <div class="loader"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="fechaNacimiento">Fecha de Nacimiento *</label>
                            <div class="position-relative">
                                <input type="date" class="form-input form-control requerido" name="fechaNacimiento"
                                    id="fechaNacimiento" oninput="validationOfRequeridFields()">
                                <div class="loader-overlay">
                                    <div class="loader"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Tipo trabajo *</label>
                            <select class="chosen-select form-select form-input form-control requerido"
                                id="id_tipoTrabajo" onchange="validationOfRequeridFields()">
                                <option value="" disabled selected>Seleccionar</option>
                                {{#each tipoTrabajo}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Área *</label>
                            <select class="chosen-select form-select form-input form-control requerido" id="id_area"
                                onchange="validationOfRequeridFields()">
                                <option value="" disabled selected>Seleccionar</option>
                                {{#each areas}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Carrera *</label>
                            <select class="chosen-select form-select form-input form-control requerido" id="id_career"
                                onchange="validationOfRequeridFields()">
                                <option value="" disabled selected>Seleccionar</option>
                                {{#each career}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Especialidad</label>
                            <div class="position-relative">
                                <select class="chosen-select form-select form-input form-control" id="id_specialties"
                                    onchange="validationOfRequeridFields()">
                                    <option value="" disabled selected>Seleccionar carrera</option>
                                </select>
                                <div class="loader-overlay">
                                    <div class="loader"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="fechaContrato">Fecha contrato *</label>
                            <div class="position-relative">
                                <input type="date" class="form-input form-control requerido" name="fechaContrato"
                                    id="fechaContrato" oninput="validationOfRequeridFields()">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="numberWhatsapp">Teléfono *</label>
                            <input type="text" class="form-input form-control requerido" name="telefono" id="telefono"
                                placeholder="Teléfono del usuario" oninput="validationOfRequeridFields()">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="numberWhatsapp">Whatsapp *</label>
                            <input type="text" class="form-input form-control requerido" name="numberWhatsapp"
                                id="numberWhatsapp" placeholder="Whatsapp del usuario"
                                oninput="validationOfRequeridFields()">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Ubigeo *</label>
                            <select data-plugin="customselect" class="form-select form-input form-contro requerido"
                                id="ubigeo_user" onchange="validationOfRequeridFields()">
                            </select>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="address">Dirección *</label>
                            <input type="text" class="form-input form-control requerido" name="address" id="address"
                                placeholder="Dirección del usuario" oninput="validationOfRequeridFields()">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="urbanizacion">Urbanización</label>
                            <input type="text" class="form-input form-control" name="urbanizacion" id="urbanizacion"
                                placeholder="Urbanización del usuario">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="usuario">Correo electrónico*</label>
                            <input type="text" class="form-input form-control requerido" name="email" id="email"
                                oninput="validationOfRequeridFields()">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label" for="password">Contraseña *</label>
                            <div class="input-group">
                                <span class="input-group-text" id="inputGroupPrepend"
                                    onclick="manejarVisibilidadDeContraseña()">
                                    <svg id="eyeOffIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round"
                                        class="feather feather-eye icon-dual" style="display: none;">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                    <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round"
                                        class="feather feather-eye-off icon-dual">
                                        <path
                                            d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24">
                                        </path>
                                        <line x1="1" y1="1" x2="23" y2="23"></line>
                                    </svg>
                                </span>
                                <input type="password" class="form-input form-control requerido" id="password"
                                    aria-describedby="password" oninput="validationOfRequeridFields()"
                                    autocomplete="off">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Perfiles *</label>
                            <select class="form-select form-input form-control requerido" id="ids_perfiles" multiple
                                onchange="updateSelectedProfiles()">
                                {{#each perfiles}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="guardar" disabled>Guardar</button>
            </div>

            <div class="position-absolute top-0 start-0 w-100 h-100"
                style="background: rgba(255, 255, 255, 0.3); z-index: 1040; display: none;" id="loaderContainer">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>